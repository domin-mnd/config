{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "noAccessKey": "off",
        "noAriaUnsupportedElements": "off",
        "noAutofocus": "off",
        "noBlankTarget": "warn",
        "noDistractingElements": "off",
        "noHeaderScope": "off",
        "noNoninteractiveElementToInteractiveRole": "off",
        "noNoninteractiveTabindex": "off",
        "noPositiveTabindex": "off",
        "noRedundantAlt": "warn",
        "noRedundantRoles": "off",
        "noSvgWithoutTitle": "off",
        "useAltText": "error",
        "useAnchorContent": "off",
        "useAriaPropsForRole": "warn",
        "useButtonType": "warn",
        "useHeadingContent": "off",
        "useHtmlLang": "warn",
        "useIframeTitle": "off",
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off",
        "useMediaCaption": "warn",
        "useValidAnchor": "off",
        "useValidAriaProps": "off",
        "useValidAriaValues": "warn",
        "useValidLang": "error"
      },
      "complexity": {
        "noBannedTypes": "error",
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 20
          }
        },
        "noExtraBooleanCast": "warn",
        "noForEach": "off",
        "noMultipleSpacesInRegularExpressionLiterals": "off",
        "noStaticOnlyClass": "off",
        "noUselessCatch": "warn",
        "noUselessConstructor": "warn",
        "noUselessEmptyExport": "error",
        "noUselessFragments": "warn",
        "noUselessLabel": "error",
        "noUselessRename": "error",
        "noUselessSwitchCase": "warn",
        "noUselessThisAlias": "off",
        "noUselessTypeConstraint": "off",
        "noVoid": "off",
        "noWith": "error",
        "useFlatMap": "warn",
        "useLiteralKeys": "error",
        "useOptionalChain": "warn",
        "useSimpleNumberKeys": "off",
        "useSimplifiedLogicExpression": "off"
      },
      "correctness": {
        "noChildrenProp": "warn",
        "noConstAssign": "error",
        "noConstantCondition": "warn",
        "noConstructorReturn": "error",
        "noEmptyPattern": "warn",
        "noGlobalObjectCalls": "error",
        "noInnerDeclarations": "off",
        "noInvalidConstructorSuper": "error",
        "noNewSymbol": "error",
        "noNonoctalDecimalEscape": "warn",
        "noPrecisionLoss": "error",
        "noRenderReturnValue": "off",
        "noSelfAssign": "off",
        "noSetterReturn": "error",
        "noStringCaseMismatch": "warn",
        "noSwitchDeclarations": "off",
        "noUndeclaredVariables": "error",
        "noUnnecessaryContinue": "off",
        "noUnreachable": "off",
        "noUnreachableSuper": "off",
        "noUnsafeFinally": "warn",
        "noUnsafeOptionalChaining": "error",
        "noUnusedLabels": "error",
        "noUnusedVariables": "warn",
        "noVoidElementsWithChildren": "error",
        "noVoidTypeReturn": "off",
        "useExhaustiveDependencies": "error",
        "useHookAtTopLevel": "error",
        "useIsNan": "error",
        "useValidForDirection": "warn",
        "useYield": "error"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noDelete": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off",
        "noDangerouslySetInnerHtmlWithChildren": "off"
      },
      "style": {
        "noArguments": "error",
        "noCommaOperator": "off",
        "noImplicitBoolean": "off",
        "noInferrableTypes": "off",
        "noNamespace": "off",
        "noNegationElse": "warn",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "noParameterProperties": "off",
        "noRestrictedGlobals": "off",
        "noShoutyConstants": "error",
        "noUnusedTemplateLiteral": "warn",
        "noVar": "error",
        "useBlockStatements": "off",
        "useCollapsedElseIf": "warn",
        "useConst": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "off",
        "useExponentiationOperator": "warn",
        "useFragmentSyntax": "warn",
        "useLiteralEnumMembers": "off",
        "useNamingConvention": "off",
        "useNumericLiterals": "error",
        "useSelfClosingElements": "warn",
        "useShorthandArrayType": "error",
        "useSingleCaseStatement": "off",
        "useSingleVarDeclarator": "off",
        "useTemplate": "warn",
        "useWhile": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noAssignInExpressions": "off",
        "noAsyncPromiseExecutor": "off",
        "noCatchAssign": "error",
        "noClassAssign": "error",
        "noCommentText": "off",
        "noCompareNegZero": "error",
        "noConfusingLabels": "error",
        "noConfusingVoidType": "error",
        "noConsoleLog": "warn",
        "noConstEnum": "off",
        "noControlCharactersInRegex": "off",
        "noDebugger": "error",
        "noDoubleEquals": "error",
        "noDuplicateCase": "warn",
        "noDuplicateClassMembers": "error",
        "noDuplicateJsxProps": "warn",
        "noDuplicateObjectKeys": "off",
        "noDuplicateParameters": "off",
        "noEmptyInterface": "off",
        "noExplicitAny": "error",
        "noExtraNonNullAssertion": "error",
        "noFallthroughSwitchClause": "off",
        "noFunctionAssign": "off",
        "noGlobalIsFinite": "error",
        "noGlobalIsNan": "error",
        "noImportAssign": "error",
        "noLabelVar": "error",
        "noPrototypeBuiltins": "error",
        "noRedeclare": "error",
        "noRedundantUseStrict": "error",
        "noSelfCompare": "off",
        "noShadowRestrictedNames": "error",
        "noSparseArray": "off",
        "noUnsafeDeclarationMerging": "off",
        "noUnsafeNegation": "error",
        "useDefaultSwitchClauseLast": "warn",
        "useGetterReturn": "error",
        "useIsArray": "error",
        "useNamespaceKeyword": "warn",
        "useValidTypeof": "error"
      },
      "nursery": {
        "noApproximativeNumericConstant": "warn",
        "noDuplicateJsonKeys": "error",
        "noEmptyBlockStatements": "off",
        "noEmptyCharacterClassInRegex": "off",
        "noInteractiveElementToNoninteractiveRole": "off",
        "noInvalidNewBuiltin": "error",
        "noMisleadingInstantiator": "off",
        "noMisrefactoredShorthandAssign": "off",
        "noThisInStatic": "off",
        "noUnusedImports": "warn",
        "noUselessElse": "off",
        "noUselessLoneBlockStatements": "warn",
        "useAriaActivedescendantWithTabindex": "off",
        "useArrowFunction": "warn",
        "useAsConstAssertion": "off",
        "useGroupedTypeImport": "warn",
        "useImportRestrictions": "error",
        "useShorthandAssign": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingComma": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "lineWidth": 70
    }
  },
  "json": {
    "parser": {
      "allowComments": false,
      "allowTrailingCommas": false
    },
    "formatter": {
      "enabled": true,
      "lineWidth": 100
    }
  }
}
